{
  "name": "onthewake-life",
  "version": "0.0.1",
  "description": "API for the onTheWake life app",
  "author": {
    "name": "neonCelebro",
    "email": "cotcelebro@gmail.com",
    "url": "https://github.com/neoncelebro"
  },
  "private": true,
  "homepage": "https://github.com/NeonCelebro/onTheWake",
  "repository": {
    "type": "git",
    "url": "https://github.com/NeonCelebro/onTheWake.git"
  },
   "engines": {
    "node": "14.x",
    "npm": "7.x"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "NODE_ENV=development nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "NODE_ENV=production node dist/main",
    "doc": "npm run doc:generate -- -s",
    "doc:generate": "npx @compodoc/compodoc -p tsconfig.json",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --detectOpenHandles",
    "test:watch": "npm run test -- --watch",
    "test:cov": "npm run test -- --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^7.6.14",
    "@nestjs/core": "^7.6.14",
    "@nestjs/jwt": "^7.2.0",
    "@nestjs/passport": "^7.1.5",
    "@nestjs/platform-fastify": "^7.6.14",
    "@nestjs/schedule": "^1.0.1",
    "@nestjs/swagger": "^4.7.16",
    "@nestjs/typeorm": "^7.1.5",
    "bcrypt": "^5.0.1",
    "cache-manager": "^3.4.4",
    "cache-manager-redis-store": "^2.0.0",
    "chance": "^1.1.7",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "dotenv": "^8.2.0",
    "fastify-compress": "^3.4.2",
    "fastify-helmet": "^5.3.0",
    "fastify-multipart": "^4.0.2",
    "fastify-rate-limit": "^5.5.0",
    "fastify-swagger": "^4.4.1",
    "generate-password": "^1.6.0",
    "moment": "^2.29.1",
    "passport": "^0.4.1",
    "passport-jwt": "^4.0.0",
    "pg": "^8.5.1",
    "reflect-metadata": "0.1.13",
    "rxjs": "^6.6.6",
    "sharp": "^0.27.2",
    "stripe": "^8.157.0",
    "typeorm": "^0.2.31"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-angular": "^12.0.1",
    "@compodoc/compodoc": "^1.1.14",
    "@nestjs/cli": "^7.5.6",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.14",
    "@types/bcrypt": "^3.0.0",
    "@types/busboy": "^0.2.3",
    "@types/cache-manager": "^3.4.0",
    "@types/cache-manager-redis-store": "^2.0.0",
    "@types/chance": "^1.1.1",
    "@types/cron": "^1.7.3",
    "@types/dotenv": "^8.2.0",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.34",
    "@types/passport": "^1.0.6",
    "@types/sharp": "^0.27.1",
    "@types/supertest": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "chai": "^4.3.4",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.20.1",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "sinon": "^9.2.4",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.3",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3",
    "uuid": "^8.3.2"
  },
  "jest": {
    "verbose": true,
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1",
      "^test/(.*)$": "<rootDir>/test/$1"
    },
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "testEnvironment": "node",
    "testRegex": "/src/.*\\.(test|spec).(ts|tsx|js)$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageReporters": [
      "json-summary",
      "text"
    ]
  },
  "compodoc": {
    "open": true,
    "hideGenerator": true,
    "output": "./public",
    "tsconfig": "./tsconfig.json",
    "unitTestCoverage": "./coverage/coverage-summary.json"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -c .commitlintrc.json -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run format && npm run lint && git add",
      "pre-push": "npm run test -- -o"
    }
  }
}
